<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- default style for theme -->
    <attr name="ttlm_defaultStyle" format="reference" />

    <!-- default style -->
    <declare-styleable name="TooltipLayout">
        <attr name="ttlm_padding" format="dimension" />
        <attr name="ttlm_strokeColor" format="color" />
        <attr name="ttlm_backgroundColor" format="color" />
        <attr name="ttlm_strokeWeight" format="dimension" />
        <attr name="ttlm_cornerRadius" format="dimension" />
        <attr name="ttlm_arrowRatio" format="float" />
    </declare-styleable>

    <declare-styleable name="CompoundButton">
        <attr name="android:button" />
    </declare-styleable>

    <item name="null_color" type="color">#00000000</item>
    <item name="cc_card" type="id"/>
    <item name="cc_ccv" type="id"/>
    <item name="cc_entry" type="id"/>
    <item name="cc_entry_internal" type="id"/>
    <item name="cc_exp" type="id"/>
    <item name="cc_form_layout" type="id"/>
    <item name="cc_zip" type="id"/>
    <item name="text_helper" type="id"/>

</resources>