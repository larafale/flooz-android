<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/social_separator_labels"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_medium">

        <TextView
            android:id="@+id/social_separator_like_label"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/dimen_large"
            android:textSize="12sp"
            android:inputType="none"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/social_separator_comment_label"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/dimen_large"
            android:layout_toRightOf="@+id/social_separator_like_label"
            android:textSize="12sp"
            android:inputType="none"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#2f3a45"
            android:layout_marginLeft="@dimen/dimen_large"
            android:layout_marginRight="@dimen/dimen_large"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/social_separator_labels"
        android:id="@+id/social_separator"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_small"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_large"
        android:layout_marginRight="@dimen/dimen_large">

        <LinearLayout
            android:id="@+id/social_separator_like"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/social_separator_like_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="@dimen/dimen_small"
                android:src="@drawable/social_like"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/social_separator_comment"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:layout_height="wrap_content"
            android:gravity="left">

            <ImageView
                android:id="@+id/social_separator_comment_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="@dimen/dimen_small"
                android:src="@drawable/social_comment"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/social_separator_share"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageView
                android:id="@+id/social_separator_share_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="@dimen/dimen_small"
                android:src="@drawable/social_share"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/social_separator_more"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageView
                android:id="@+id/social_separator_more_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="@dimen/dimen_small"
                android:src="@drawable/social_more"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>