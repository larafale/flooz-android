<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_header"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_pager_view_height"
        android:background="@color/background_header"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/settings_credit_card_header_title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:textSize="@dimen/header_pager_view_fontsize"
            android:textColor="@color/blue"
            android:layout_height="wrap_content"
            android:text="@string/SETTINGS_CARD"/>

        <ImageView
            android:id="@+id/settings_credit_card_header_back"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/new_flooz_header_cross"
            android:padding="@dimen/timeline_cell_large_margin"
            android:layout_height="fill_parent"
            android:src="@drawable/nav_back"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/settings_credit_card_remove_card_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/settings_credit_card_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/timeline_cell_xxlarge_margin"
            android:layout_marginRight="@dimen/timeline_cell_xxlarge_margin"
            android:paddingTop="@dimen/timeline_cell_large_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/credit_card_background"
                android:layout_centerInParent="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/timeline_cell_xlarge_margin"
                android:paddingTop="70dp"
                android:gravity="left">

                <TextView
                    android:id="@+id/settings_credit_card_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/settings_credit_card_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/timeline_cell_large_margin"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:id="@+id/settings_credit_card_remove_button"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/signup_button_height"
                android:background="@color/background"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:paddingTop="@dimen/timeline_cell_large_margin"
                android:paddingBottom="@dimen/timeline_cell_large_margin"
                android:paddingLeft="@dimen/timeline_cell_xxlarge_margin"
                android:paddingRight="@dimen/timeline_cell_xxlarge_margin"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/timeline_cell_xlarge_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/trash"/>

                <TextView
                    android:id="@+id/settings_credit_card_remove_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/CREDIT_CARD_REMOVE"
                    android:layout_marginLeft="@dimen/timeline_cell_large_margin"/>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings_credit_card_create_card_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/timeline_cell_large_margin"
        android:paddingLeft="@dimen/timeline_cell_xlarge_margin"
        android:paddingRight="@dimen/timeline_cell_xlarge_margin">

        <EditText
            android:id="@+id/settings_credit_card_create_owner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/timeline_cell_medium_margin"
            android:singleLine="true"
            android:hint="@string/SIGNUP_FIELD_CARD_OWNER_PLACEHOLDER"
            android:textColorHint="@color/placeholder"/>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/timeline_cell_medium_margin">

            <EditText
                android:id="@+id/settings_credit_card_create_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="number|text"
                android:hint="@string/SIGNUP_FIELD_CARD_NUMBER_PLACEHOLDER"
                android:textColorHint="@color/placeholder"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/settings_credit_card_create_scanpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/camera_grey"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/timeline_cell_large_margin"
                android:layout_centerVertical="true"
                android:visibility="gone"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/settings_credit_card_create_expires"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/timeline_cell_medium_margin"
            android:singleLine="true"
            android:inputType="date"
            android:hint="@string/SIGNUP_FIELD_CARD_EXPIRES_PLACEHOLDER"
            android:textColorHint="@color/placeholder"/>

        <EditText
            android:id="@+id/settings_credit_card_create_cvv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/timeline_cell_medium_margin"
            android:singleLine="true"
            android:inputType="number|text"
            android:hint="@string/SIGNUP_FIELD_CARD_CVV_PLACEHOLDER"
            android:textColorHint="@color/placeholder"/>

        <Button
            android:id="@+id/settings_credit_card_create_add"
            android:layout_marginTop="@dimen/timeline_cell_xlarge_margin"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/signup_button_height"
            android:gravity="center"
            android:background="@drawable/background_action_button"
            android:enabled="false"
            android:text="@string/SIGNUP_VIEW_IGNORE_BUTTON_2"
            android:layout_marginBottom="@dimen/timeline_cell_xlarge_margin"
            android:textSize="20sp"
            android:textColor="@drawable/text_color_action_button"/>

    </LinearLayout>
</LinearLayout>