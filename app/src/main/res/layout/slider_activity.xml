<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launch_background">

    <android.support.v4.view.ViewPager
        android:id="@+id/slider_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <TextView
        android:id="@+id/slider_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="right"
        android:text="Passer"
        android:layout_margin="@dimen/dimen_medium"
        android:textColor="@android:color/white"
        android:padding="@dimen/dimen_large"/>

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/slider_pager_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_xlarge"
        android:padding="@dimen/dimen_medium"/>

</RelativeLayout>