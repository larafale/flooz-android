<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/numeric_keyboard_grid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@android:color/darker_gray"
    android:orientation="vertical"
    android:showDividers="middle|beginning|end" >

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:gravity="center"
        android:showDividers="middle" >

        <Button
            android:id="@+id/numeric_keyboard_key_1"
            style="@style/numeric_keyboard_key"
            android:text="1"
            android:textIsSelectable="false" />

        <Button
            android:id="@+id/numeric_keyboard_key_2"
            style="@style/numeric_keyboard_key"
            android:text="2"
            android:textIsSelectable="false" />

        <Button
            android:id="@+id/numeric_keyboard_key_3"
            style="@style/numeric_keyboard_key"
            android:text="3"
            android:textIsSelectable="false" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:gravity="center"
        android:showDividers="middle" >

        <Button
            android:id="@+id/numeric_keyboard_key_4"
            style="@style/numeric_keyboard_key"
            android:text="4"
            android:textIsSelectable="false" />

        <Button
            android:id="@+id/numeric_keyboard_key_5"
            style="@style/numeric_keyboard_key"
            android:text="5"
            android:textIsSelectable="false" />

        <Button
            android:id="@+id/numeric_keyboard_key_6"
            style="@style/numeric_keyboard_key"
            android:text="6"
            android:textIsSelectable="false" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:gravity="center"
        android:showDividers="middle" >

        <Button
            android:id="@+id/numeric_keyboard_key_7"
            style="@style/numeric_keyboard_key"
            android:text="7"
            android:textIsSelectable="false" />

        <Button
            android:id="@+id/numeric_keyboard_key_8"
            style="@style/numeric_keyboard_key"
            android:text="8"
            android:textIsSelectable="false" />

        <Button
            android:id="@+id/numeric_keyboard_key_9"
            style="@style/numeric_keyboard_key"
            android:text="9"
            android:textIsSelectable="false" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:gravity="center"
        android:showDividers="middle" >

        <Button
            android:id="@+id/numeric_keyboard_key_clear"
            style="@style/numeric_keyboard_key"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textIsSelectable="false" />

        <Button
            android:id="@+id/numeric_keyboard_key_0"
            style="@style/numeric_keyboard_key"
            android:text="0"
            android:textIsSelectable="false" />

        <ImageButton
            android:id="@+id/numeric_keyboard_key_backspace"
            style="@style/numeric_keyboard_key"
            android:src="@drawable/keyboard_backward"
            android:textIsSelectable="false"/>
    </TableRow>

</TableLayout>