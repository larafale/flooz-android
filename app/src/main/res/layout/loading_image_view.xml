<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/loading_image_view_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/loading_image_view_background">

        <ProgressBar
            android:id="@+id/loading_image_view_progress"
            android:layout_width="fill_parent"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_height="1dp"
            android:progressDrawable="@drawable/progress_bar_image_custom"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/loading_image_view_img"
        android:scaleType="centerCrop"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        app:riv_corner_radius="@dimen/avatar_corner"
        app:riv_oval="false"/>

</RelativeLayout>