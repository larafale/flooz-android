<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:clickable="true"
    android:background="@color/background_header">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_xlarge"
        android:paddingRight="@dimen/dimen_xlarge"
        android:layout_marginTop="@dimen/header_size"
        android:paddingTop="@dimen/dimen_large">

        <EditText
            android:id="@+id/settings_identity_username"
            android:layout_width="fill_parent"
            android:inputType="textNoSuggestions"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="gone"
            android:hint="@string/FIELD_USERNAME"/>

        <FrameLayout
            android:layout_marginTop="@dimen/dimen_small"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <EditText
                android:id="@+id/settings_identity_birthdate"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:textColorHint="@color/placeholder"
                android:inputType="date"
                android:textColor="@android:color/white"
                android:nextFocusForward="@+id/signup_infos_password"
                android:hint="@string/FIELD_BIRTHDATE"/>

            <TextView
                android:id="@+id/settings_identity_birthdate_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="8dp"
                android:textColor="@color/placeholder"
                android:text="@string/FIELD_BIRTHDATE_EX"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/settings_identity_cni_recto_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/settings_identity_cni_recto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:textColorHint="@color/placeholder"
                android:inputType="none"
                android:textColor="@android:color/white"
                android:clickable="true"
                android:focusable="false"
                android:text="@string/DOCUMENTS_CARD_ID_RECTO"/>

            <ImageView
                android:id="@+id/settings_identity_recto"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:padding="@dimen/dimen_small"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/settings_identity_cni_verso_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true">

            <EditText
                android:id="@+id/settings_identity_cni_verso"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:textColorHint="@color/placeholder"
                android:inputType="none"
                android:textColor="@android:color/white"
                android:focusable="false"
                android:text="@string/DOCUMENTS_CARD_ID_VERSO"/>

            <ImageView
                android:id="@+id/settings_identity_verso"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:padding="@dimen/dimen_small"/>

        </FrameLayout>


        <FrameLayout
            android:id="@+id/settings_coord_justificatory_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true">

            <EditText
                android:id="@+id/settings_coord_justificatory"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:textColorHint="@color/placeholder"
                android:inputType="none"
                android:textColor="@android:color/white"
                android:nextFocusForward="@+id/signup_infos_password"
                android:focusable="false"
                android:text="@string/DOCUMENTS_HOME"/>

            <ImageView
                android:id="@+id/settings_coord_justificatory_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:padding="@dimen/dimen_small"
                android:src="@drawable/friends_accepted"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/settings_coord_justificatory2_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/settings_coord_justificatory2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:textColorHint="@color/placeholder"
                android:inputType="none"
                android:textColor="@android:color/white"
                android:focusable="false"
                android:text="@string/DOCUMENTS_HOME2"/>

            <ImageView
                android:id="@+id/settings_coord_justificatory2_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:padding="@dimen/dimen_small"
                android:src="@drawable/friends_accepted"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/settings_coord_card_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/settings_coord_card"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:textColorHint="@color/placeholder"
                android:inputType="none"
                android:textColor="@android:color/white"
                android:focusable="false"
                android:text="@string/NAV_CREDIT_CARD"/>

            <ImageView
                android:id="@+id/settings_coord_card_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:padding="@dimen/dimen_small"
                android:src="@drawable/friends_accepted"/>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/documents_infos"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_xxxlarge"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dimen_xlarge"
                android:paddingLeft="@dimen/dimen_xlarge"
                android:paddingRight="@dimen/dimen_xlarge"
                android:textColor="@color/placeholder"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/header_size">

            <ImageView
                android:id="@+id/header_item_left"
                android:layout_width="@dimen/header_item_size"
                android:layout_height="@dimen/header_item_size"
                android:padding="@dimen/header_item_padding"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/nav_cross"
                android:layout_marginLeft="@dimen/header_item_margin"
                />

            <TextView
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/SETTINGS_DOCUMENTS"
                android:textColor="@color/blue"
                android:textSize="@dimen/header_title"/>

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/header_shadow"
            android:background="@drawable/header_background_shadow"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</RelativeLayout>