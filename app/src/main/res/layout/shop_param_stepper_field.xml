<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/shop_param_stepper_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/lay_12"
        android:textSize="16sp"
        android:layout_toLeftOf="@+id/shop_param_stepper_value"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/white"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/shop_param_stepper_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:layout_marginRight="@dimen/dimen_xlarge"
        android:layout_marginLeft="@dimen/dimen_large"
        android:textSize="16sp"
        android:layout_toLeftOf="@+id/shop_param_stepper_stepper"
        android:singleLine="true"/>

    <LinearLayout
        android:id="@+id/shop_param_stepper_stepper"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_large"
        android:layout_centerVertical="true"
        android:gravity="center">

        <Button
            android:id="@+id/shop_param_stepper_minus"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingTop="-2dp"
            android:text="â€“"
            android:textSize="20sp"
            android:background="@drawable/stepper_left_background"
            android:textColor="@color/stepper_font_color"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/blue"/>

        <Button
            android:id="@+id/shop_param_stepper_plus"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="20sp"
            android:background="@drawable/stepper_right_background"
            android:textColor="@color/stepper_font_color"/>

    </LinearLayout>

</RelativeLayout>