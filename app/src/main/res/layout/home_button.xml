<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dimen_medium"
    android:paddingRight="@dimen/dimen_medium"
    android:paddingTop="@dimen/dimen_large"
    android:paddingBottom="@dimen/dimen_large"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:background="@drawable/home_button_background"
        android:paddingTop="@dimen/dimen_large"
        android:paddingBottom="@dimen/dimen_large"
        android:paddingLeft="@dimen/dimen_large"
        android:paddingRight="@dimen/dimen_large"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/home_button_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_large"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/home_button_img"
            android:layout_toLeftOf="@+id/home_button_arrow"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/home_button_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:singleLine="true"
                />

            <TextView
                android:id="@+id/home_button_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/placeholder"
                android:textSize="13sp"
                android:maxLines="3"
                android:layout_marginTop="@dimen/dimen_small"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/home_button_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_large"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_right"/>

        <TextView
            android:id="@+id/home_button_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_button_avalaible_background"
            android:text="BientÃ´t disponible"
            android:paddingBottom="@dimen/dimen_medium"
            android:paddingTop="@dimen/dimen_medium"
            android:paddingLeft="@dimen/dimen_large"
            android:paddingRight="@dimen/dimen_large"
            android:layout_centerInParent="true"
            android:rotation="-10"
            android:textSize="14sp"
            android:textColor="@android:color/holo_red_light"/>

    </RelativeLayout>

</RelativeLayout>