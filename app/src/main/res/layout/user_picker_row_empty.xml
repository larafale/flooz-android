<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:paddingBottom="@dimen/dimen_medium"
    android:paddingTop="@dimen/dimen_medium"
    android:paddingRight="@dimen/dimen_medium"
    android:paddingLeft="@dimen/dimen_medium"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/contact_list_row_empty_text_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/TRANSACTION_CONTACT_LIST_EMPTY_1"
        android:textSize="16sp"
        android:textColor="@color/placeholder"/>

    <TextView
        android:id="@+id/contact_list_row_empty_text_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/TRANSACTION_CONTACT_LIST_EMPTY_2"
        android:textSize="16sp"
        android:textColor="@color/placeholder"/>

</LinearLayout>