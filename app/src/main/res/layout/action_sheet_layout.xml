<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/action_sheet_width"
    android:layout_height="match_parent"
    android:layout_gravity="bottom">

    <LinearLayout
        android:id="@+id/action_sheet_list"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/action_sheet_list_background">

    </LinearLayout>

    <TextView
        android:id="@+id/action_sheet_cancel"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/dimen_large"
        android:layout_marginBottom="@dimen/dimen_large"
        android:padding="@dimen/dimen_large"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@drawable/action_sheet_cancel_background"
        android:textAlignment="gravity"
        android:textSize="@dimen/action_sheet_item_size"
        android:gravity="center"
        android:text="@string/GLOBAL_CANCEL"/>

</LinearLayout>