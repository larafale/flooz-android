<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_comment_row_background"
    android:paddingBottom="@dimen/dimen_small"
    android:paddingTop="@dimen/dimen_small"
    android:paddingRight="@dimen/dimen_medium"
    android:paddingLeft="@dimen/dimen_medium">

    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_comment_row_img"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/timeline_cell_img"
        android:layout_height="@dimen/timeline_cell_img"
        android:layout_marginLeft="@dimen/dimen_large"
        android:layout_marginRight="@dimen/dimen_large"
        android:layout_marginTop="@dimen/dimen_xsmall"
        android:layout_gravity="center_horizontal|top"
        app:riv_corner_radius="30dip"
        app:riv_mutate_background="true"
        app:riv_oval="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_large"
        android:paddingBottom="@dimen/dimen_large"
        android:layout_marginTop="@dimen/dimen_medium">

        <TextView
            android:id="@+id/card_comment_row_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/card_comment_text"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/card_comment_row_infos"
            android:layout_marginTop="@dimen/dimen_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/card_comment_infos"
            android:textColor="@color/blue_social"/>

    </LinearLayout>

</LinearLayout>