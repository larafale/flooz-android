<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_collect_base"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_pager_view_height"
        android:background="@color/background_header"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/new_collect_close_button"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/new_flooz_header_cross"
            android:padding="@dimen/dimen_large"
            android:layout_height="@dimen/new_flooz_header_cross"
            android:src="@drawable/nav_cross"/>

        <TextView
            android:id="@+id/new_collect_header_text"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:textSize="@dimen/header_pager_view_fontsize"
            android:textColor="@color/blue"
            android:layout_height="wrap_content"
            android:text="@string/NEW_COLLECT"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <EditText
                android:id="@+id/new_collect_name_textfield"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:singleLine="true"
                android:hint="Nom de la cagnotte"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/blue_middle"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:padding="@dimen/dimen_large"
                    android:layout_height="fill_parent"
                    android:baselineAligned="false"
                    android:layout_marginBottom="65dp">

                    <RelativeLayout
                        android:id="@+id/new_collect_content"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:clickable="true">

                        <EditText
                            android:id="@+id/new_collect_content_textfield"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="@string/FIELD_TRANSACTION_CONTENT_PLACEHOLDER"
                            android:textColorHint="@color/placeholder"
                            android:maxLength="150"
                            android:text=""
                            android:cursorVisible="true"
                            android:textCursorDrawable="@null"
                            android:layout_marginBottom="40dp"
                            android:gravity="top"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:textColor="@android:color/white"
                            android:inputType="textShortMessage"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/new_collect_pic_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_large"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/new_collect_pic"
                            android:layout_width="@dimen/new_flooz_pic_width"
                            android:layout_height="@dimen/new_flooz_pic_height"
                            android:scaleType="centerCrop"/>

                        <ImageView
                            android:id="@+id/new_collect_pic_delete"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:padding="@dimen/dimen_small"
                            android:src="@drawable/image_close"
                            android:layout_alignRight="@id/new_collect_pic"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/new_collect_tabbar"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/blue_middle"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:baselineAligned="false">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_centerInParent="true"
                                android:id="@+id/new_collect_scope_pic"
                                android:layout_width="@dimen/new_flooz_main_social_icn"
                                android:layout_height="@dimen/new_flooz_main_social_icn"
                                android:src="@drawable/scope_public"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_centerInParent="true"
                                android:id="@+id/new_collect_pic_button"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/new_flooz_main_social_icn"
                                android:src="@drawable/camera"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_centerInParent="true"
                                android:id="@+id/new_collect_geo_button"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/new_flooz_main_social_icn"
                                android:src="@drawable/map"/>

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/new_flooz_main_action_zone"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingTop="@dimen/dimen_small"
                        android:paddingBottom="@dimen/dimen_small">

                        <TextView
                            android:id="@+id/new_collect_collect"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/MENU_COLLECT"
                            android:layout_margin="@dimen/dimen_medium"
                            android:textColor="@android:color/white"
                            android:background="@drawable/background_action_button"
                            android:gravity="center"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/new_collect_geo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_above="@+id/new_collect_tabbar"
                    android:background="@color/background_header"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen_large"
                    android:paddingRight="@dimen/dimen_large"
                    android:paddingTop="@dimen/dimen_small"
                    android:paddingBottom="@dimen/dimen_small">

                    <ImageView
                        android:id="@+id/new_collect_geo_pic"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/map"
                        android:layout_marginRight="@dimen/dimen_medium"/>

                    <TextView
                        android:id="@+id/new_collect_geo_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <com.ryanharter.android.tooltips.ToolTipLayout
            android:id="@+id/new_collect_tooltip_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:visibility="gone"/>

        <com.ryanharter.android.tooltips.ToolTipLayout
            android:id="@+id/new_collect_demo_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>
