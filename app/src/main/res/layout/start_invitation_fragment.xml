<?xml version="1.0" encoding="utf-8"?>
<me.flooz.app.UI.View.SlidableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:clickable="true"
    android:background="@color/background_header">

    <TextView
        android:id="@+id/start_invitation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_xlarge"/>

    <EditText
        android:id="@+id/start_invitation_textfield"
        android:layout_marginTop="@dimen/dimen_xlarge"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:hint=""
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColor="@android:color/white"
        android:textColorHint="@color/placeholder"/>

    <Button
        android:id="@+id/start_invitation_next"
        android:layout_marginTop="@dimen/dimen_xlarge"
        android:layout_width="300dp"
        android:layout_height="@dimen/signup_button_height"
        android:gravity="center"
        android:background="@drawable/background_action_button"
        android:text="@string/Send_Button_Mobile"
        android:layout_marginBottom="@dimen/dimen_xlarge"
        android:textSize="20sp"
        android:textColor="@drawable/text_color_action_button"/>

</me.flooz.app.UI.View.SlidableLinearLayout>