<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/dialog_validate_flooz_width"
    android:layout_height="wrap_content"
    android:background="@color/blue"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialog_validate_flooz_pic_height"
        android:src="@drawable/account_informations"
        android:layout_marginTop="@dimen/timeline_cell_large_margin"/>

    <TextView
        android:id="@+id/dialog_validate_flooz_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/timeline_cell_xlarge_margin"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dialog_validate_flooz_text_size"
        android:textAlignment="center"
        android:gravity="center"
        android:text="Envoyer 1â‚¬ a @larafale via votre porte-monnaie Flooz ?"/>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dialog_validate_flooz_decline"
            android:layout_width="@dimen/dialog_validate_flooz_button_width"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColor="@color/blue"
            android:text="@string/GLOBAL_NO"
            android:layout_marginRight="@dimen/timeline_cell_xsmall_margin"/>

        <Button
            android:id="@+id/dialog_validate_flooz_accept"
            android:layout_width="@dimen/dialog_validate_flooz_button_width"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColor="@color/blue"
            android:text="@string/GLOBAL_YES"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/timeline_cell_xsmall_margin"/>

    </LinearLayout>

</LinearLayout>