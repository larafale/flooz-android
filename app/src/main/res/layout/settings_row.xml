<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/dimen_xxlarge"
    android:paddingRight="@dimen/dimen_xlarge"
    android:paddingTop="@dimen/dimen_large"
    android:paddingBottom="@dimen/dimen_large"
    android:background="@color/background_header">

    <TextView
        android:id="@+id/settings_row_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/settings_list_item_size"
        android:textColor="@android:color/white"
        android:singleLine="true"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:id="@+id/settings_row_notifs_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_xxlarge"
        android:background="@drawable/settings_row_notifs"
        android:paddingTop="@dimen/dimen_small"
        android:paddingRight="@dimen/dimen_large"
        android:paddingLeft="@dimen/dimen_large"
        android:paddingBottom="@dimen/dimen_small"
        android:gravity="center">

        <TextView
            android:id="@+id/settings_row_notifs_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/blue"
            android:singleLine="true"/>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/settings_arrow_size"
        android:layout_height="@dimen/settings_arrow_size"
        android:src="@drawable/nav_next"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>
