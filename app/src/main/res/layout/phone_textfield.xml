<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="30dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dimen_small">

            <LinearLayout
                android:id="@+id/phone_country_side"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_small">

                <ImageView
                    android:id="@+id/phone_flag"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_small"/>

                <TextView
                    android:id="@+id/phone_indic"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/placeholder"/>

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/placeholder"
            android:layout_marginTop="@dimen/dimen_medium"
            android:layout_marginBottom="@dimen/dimen_medium"/>

        <LinearLayout
            android:id="@+id/phone_field_side"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_large">

            <EditText
                android:id="@+id/phone_edit_text"
                android:layout_width="fill_parent"
                android:inputType="phone"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:hint="@string/SIGNUP_PHONE_PLACEHOLDER"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="@android:color/white"
                android:textColorHint="@color/placeholder"
                android:background="@color/transparent"/>

        </LinearLayout>

    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/placeholder"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimen_medium"
        android:layout_marginRight="@dimen/dimen_medium"/>
    
</RelativeLayout>