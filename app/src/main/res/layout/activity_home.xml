<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background_header"/>

    <ImageView
        android:id="@+id/main_tuto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/main_transac_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/black_alpha"
        android:visibility="gone"
        android:clickable="true">

        <FrameLayout
            android:id="@+id/main_transac_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_xlarge"
            android:background="@color/background_header"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_image_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/black_alpha"
        android:visibility="gone"
        android:clickable="true">

        <ProgressBar
            android:id="@+id/main_image_progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:max="100" />

        <ImageView
            android:id="@+id/main_image_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerInside"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/main_image_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_close"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dimen_large"
            android:layout_margin="@dimen/dimen_large"/>

    </RelativeLayout>

</RelativeLayout>