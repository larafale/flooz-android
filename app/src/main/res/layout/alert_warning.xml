<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/alert_warning_background"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/timeline_cell_large_margin"
    android:paddingBottom="@dimen/timeline_cell_large_margin"
    android:paddingLeft="@dimen/timeline_cell_xlarge_margin"
    android:paddingRight="@dimen/timeline_cell_xlarge_margin">

    <ImageView
        android:id="@+id/alert_img"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/alert_icon"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/alert_warning" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/timeline_cell_large_margin"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/alert_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:text="Success"
            android:textSize="@dimen/alert_title"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/alert_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Success"
            android:textSize="@dimen/alert_content"/>

    </LinearLayout>

</LinearLayout>