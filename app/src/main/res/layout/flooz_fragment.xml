<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="@dimen/header_pager_view_height"
        android:orientation="horizontal"
        android:background="@color/background_header"
        android:gravity="center_vertical">

        <com.makeramen.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_header_button"
            android:scaleType="centerInside"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:src="@drawable/avatar_default"
            app:corner_radius="30dip"
            app:mutate_background="true"
            app:oval="true"/>

        <ImageView android:id="@+id/flooz_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/header_logo_margin"
            android:layout_marginBottom="@dimen/header_logo_margin"
            android:gravity="center"
            android:background="@color/background_header"
            android:src="@drawable/flooz_full"/>

        <ImageView
            android:id="@+id/friends_header_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:src="@drawable/scope_friend_blue"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_header">

        <flooz.android.com.flooz.UI.View.FloozFilterTabItem android:id="@+id/public_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:tab_type="tab_public"/>

        <flooz.android.com.flooz.UI.View.FloozFilterTabItem android:id="@+id/friends_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:tab_type="tab_friends"/>

        <flooz.android.com.flooz.UI.View.FloozFilterTabItem android:id="@+id/private_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:tab_type="tab_private"/>

    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/background">

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/timeline_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/timeline_dividers"
            android:dividerHeight="1px"
            android:listSelector="@android:color/transparent"
            ptr:ptrAnimationStyle="flip"/>

    </LinearLayout>

</LinearLayout>