<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/header_size">

        <TextView
            android:id="@+id/start_secure_code_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SECORE_CODE_CHOOSE"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/dimen_xxxlarge"
            android:textSize="18sp"/>

        <LinearLayout
            android:id="@+id/start_secure_code_container"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_xlarge"
            android:gravity="center">

            <ImageView
                android:id="@+id/start_secure_code_char_1"
                android:layout_width="@dimen/secure_code_indicator"
                android:layout_height="@dimen/secure_code_indicator"
                android:background="@drawable/secure_code_indicator_background"
                android:layout_margin="@dimen/dimen_large"
                />

            <ImageView
                android:id="@+id/start_secure_code_char_2"
                android:layout_width="@dimen/secure_code_indicator"
                android:layout_height="@dimen/secure_code_indicator"
                android:background="@drawable/secure_code_indicator_background"
                android:layout_margin="@dimen/dimen_large"
                />

            <ImageView
                android:id="@+id/start_secure_code_char_3"
                android:layout_width="@dimen/secure_code_indicator"
                android:layout_height="@dimen/secure_code_indicator"
                android:background="@drawable/secure_code_indicator_background"
                android:layout_margin="@dimen/dimen_large"
                />

            <ImageView
                android:id="@+id/start_secure_code_char_4"
                android:layout_width="@dimen/secure_code_indicator"
                android:layout_height="@dimen/secure_code_indicator"
                android:background="@drawable/secure_code_indicator_background"
                android:layout_margin="@dimen/dimen_large"
                />

        </LinearLayout>

        <me.flooz.app.UI.View.NumericKeyboard
            android:id="@+id/start_secure_code_keypad"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/header_size">

            <ImageView
                android:id="@+id/header_item_left"
                android:layout_width="@dimen/header_item_size"
                android:layout_height="@dimen/header_item_size"
                android:padding="@dimen/header_item_padding"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/nav_cross"
                android:layout_marginLeft="@dimen/header_item_margin"
                />

            <TextView
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/blue"
                android:text="@string/NAV_SECURE_CODE"
                android:textSize="@dimen/header_title"/>

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/header_shadow"
            android:background="@drawable/header_background_shadow"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</RelativeLayout>