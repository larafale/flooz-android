<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/dimen_large">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_xlarge"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cashin_header_balance_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Votre solde : "
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/cashin_header_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/cashin_header_balance_currency"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:text="@string/GLOBAL_EURO"
            android:layout_marginLeft="@dimen/dimen_small"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/cashin_header_infos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dimen_xxlarge"
        android:layout_marginRight="@dimen/dimen_xxlarge"
        android:layout_marginTop="@dimen/dimen_xlarge"
        android:layout_marginBottom="@dimen/dimen_xlarge"
        android:text="@string/CASHIN_INFOS"
        android:textSize="14sp"
        android:textColor="@android:color/white"/>

</LinearLayout>