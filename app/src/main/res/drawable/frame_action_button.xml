<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_enabled="true">
        <shape>
            <stroke android:width="1dip" android:color="@color/blue_alpha"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:state_focused="true" android:state_enabled="true">
        <shape>
            <stroke android:width="1dip" android:color="@color/blue_alpha"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_focused="false" android:state_pressed="false">
        <shape>
            <stroke android:width="1dip" android:color="@color/blue"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="1dip" android:color="@color/background"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>